<body>

    <%- include('layout') %> 
    <div class="container">
        <h1>Create an account </h1>
        <form action="/users/create" method="post">
            <label>Username: </label> <input type="text" name="" id="">
            <!--add presence checks here and other validation here, the "conflict" check starts in the server-->
            Password: <input type="password" name="" id="">
            <button type="submit">Create account</button>
        </form>
    </div>

    <div class="container">
        <h1>Log in an existing account</h1>
        <form action="/users/log-in" method="POST">
            Username: <input type="text">
            Password: <input type="password" name="" id="">
            <button type="submit">Log in</button>
        </form>
    </div>

</body>
